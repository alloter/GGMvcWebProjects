@{
    ViewBag.Title = "Works";
    Layout = "~/Views/Shared/ViewFangWeb.cshtml";
}

@section styles{
    @Styles.Render("~/Css/FangWeb/Works")
}

@section scripts{
    @Scripts.Render("~/Js/FangWeb/Works")
}

<div class="ViewWorks" ng-controller="WorksController">
    <div class="full-page">
        <div class="section" ng-repeat="p in Projects | orderBy:'No':true">
            <div class="caption">
                <div class="thumbnail"></div>
                <div class="text-center">
                    <div class="text-capitalize" ng-bind="p.Category"></div>
                    <br />
                    <div class="text-nowrap" ng-bind="p.Name"></div>
                </div>
            </div>
            <div class="content">
                <p class="text-center" ng-repeat="d in p.Desc" ng-bind="d" ng-hide="d.length == 0"></p>
            </div>
            <div class="scan">
                <div class="qrcode" id="qrcode{{p.No}}">
                    <!-- 二维码位置 -->
                </div>
                <div class="buttons">
                    <a class="btn btn-default btn-sm" href="/" target="_blank" ng-href="{{p.Url}}" ng-bind="'演示'"></a>
                    <a class="btn btn-default btn-sm" href="/" target="_blank" ng-href="{{p.Url}}" ng-bind="'打开'"></a>
                </div>
                <div on-finish-data-bind-filters><!-- 数据绑定结束位置 --></div>
            </div>
        </div>
    </div>
</div>

