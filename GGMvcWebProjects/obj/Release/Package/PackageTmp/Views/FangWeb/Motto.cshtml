@{
    ViewBag.Title = "Motto";
    Layout = "~/Views/Shared/ViewFangWeb.cshtml";
}

@section styles{
    @Styles.Render("~/Css/FangWeb/Motto")
}

@section scripts{
    @Scripts.Render("~/Js/FangWeb/Motto")
}

<div class="ViewMotto" ng-controller="MottoController">
    <div class="jumbotron ">
        <div class="center-block">
            <div class="text-left" ng-bind="Motto.Header.Adage"></div>
            <div class="text-right" ng-bind="Motto.Header.Author"></div>
        </div>
    </div>
    <div class="container">
        <div class="row" ng-repeat="c in Motto.List | orderBy:'No':true" ng-hide="c.Adage.length == 0">
            <div class="col-xs-12">
                <div class="callout">
                    <h3 ng-bind="c.Adage"></h3>
                    <div class="text-justify">
                        <p ng-repeat="p in c.Desc" ng-bind="p" ng-hide="p.length == 0"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
