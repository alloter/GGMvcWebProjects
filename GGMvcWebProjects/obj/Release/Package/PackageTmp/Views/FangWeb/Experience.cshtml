@{
    ViewBag.Title = "Experience";
    Layout = "~/Views/Shared/ViewFangWeb.cshtml";
}

@section styles{
    @Styles.Render("~/Css/FangWeb/Experience")
}

@section scripts{
    @Scripts.Render("~/Js/FangWeb/Experience")
}

<div class="ViewExperience" ng-controller="ExperienceController">
    <div class="container">
        <div class="row" ng-repeat="c in Career | orderBy:'No':true">
            <div class="col-xs-12">
                <hr />
                <h3>
                    <a href="/" target="_blank" ng-href="{{c.Company.Website}}" ng-bind="c.Company.Name"></a>
                </h3>
            </div>
            <div class="col-xs-12">
                <div class="row">
                    <div ng-repeat="p in c.Project" ng-class="{'col-sm-6':(c.Project.length%2 == 0), 'col-sm-4':(c.Project.length%3 == 0)}">
                        <div class="row">
                            <div class="col-xs-12">
                                <h5 ng-bind="p.Name"></h5>
                                <p class="text-justify" ng-repeat="d in p.Desc" ng-bind="d" ng-hide="d.length == 0"></p>
                                <p>
                                    <a ng-click="Showmodal(p)">查看更多></a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel" ng-bind="Mymodal.Name"></h4>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <p>
                                    <span>项目时间：</span>
                                    <span ng-bind="Mymodal.StartDate | date:'yyyy.MM'"></span>
                                    <span> - </span>
                                    <span ng-bind="Mymodal.EndDate | date:'yyyy.MM'"></span>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <p>
                                    <span>项目任务：</span>
                                </p>
                                <div class="text-left">
                                    <ol>
                                        <li ng-repeat="c in Mymodal.Duty" ng-bind="c" ng-hide="c.length == 0"></li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer hidden">
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

