@{
    ViewBag.Title = "Career";
    Layout = "~/Views/Shared/ViewFangWeb.cshtml";
}

@section styles{
    @Styles.Render("~/Css/FangWeb/Career")
}

@section scripts{
    @Scripts.Render("~/Js/FangWeb/Career")
}

<div class="ViewCareer" ng-controller="CareerController">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="text-center" ng-bind="Career.Header.Text"></h2>
            </div>
            <div class="col-xs-12">
                <div class="col-sm-6" ng-repeat="c in Career.List">
                    <div class="thumbnail">
                        <h5 class="text-center hidden" ng-bind="c.Header.Text"></h5>
                        <div class="embed-responsive embed-responsive-16by9">
                            <div class="embed-responsive-item" ng-class="c.ClassName">
                                <div on-finish-data-bind-filters></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

